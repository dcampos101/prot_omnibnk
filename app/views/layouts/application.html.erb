<!DOCTYPE html>
<html>
  <head>
    <title>OMNIbnk</title>
    <link rel="icon" type="image/png" href="/images/omni1.png" />
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  <div id="login">
  <% if user_signed_in? %>
  Login as <strong><%= current_user.email %></strong>.
  <%= link_to 'Modificar Perfil', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
  <% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
<% end %>

      </div>
      <h1 id="titulo">OMNIbnk</h1>

      <nav id="titulo">
      <ul class="fancyNav">
          <li id="home"><a href="#home" class="homeIcon">Home</a></li>
          <li id="news"><a href="#news">News</a></li>
          <li id="about"><a href="#about">About us</a></li>
          <li id="services"><a href="#services">Services</a></li>
          <li id="contact"><a href="#contact">Contact us</a></li>
      </ul>
    </nav>
    </header>
    <main id="principal">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

      <div id="menuprincipal">
        <% if user_signed_in? %>
          <ul class="btn-group-vertical">     
          <li type="button" class="btn btn-secondary"><%= link_to 'Catalogue' %></li> 
            <li type="button" class="btn btn-secondary"><%= link_to 'Movie Countries', countries_path %></li>
            <li type="button" class="btn btn-secondary"><%= link_to 'Movie Genres', genders_path %></li>
            <li type="button" class="btn btn-secondary"><%= link_to 'Movie Classifications', classifications_path %></li>
            <li type="button" class="btn btn-secondary"><%= link_to 'Movie', movies_path %></li>
          </ul>
        <% end %>
      </div>
      <div id="contenido">
          <%= yield %>
      </div>
    </main>
  </body>
</html>
