<p id="notice">Search<%= notice %></p>
<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Premiere</th>
      <th>Director</th>
      <th>Country  </th>
      <th>Cast</th>
      <th>Gender</th>
      <th>Classification</th>
      <th>Description</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.premiere_date %></td>
        <td><%= movie.director %></td>
        <td><%= movie.country.name %></td>
        <td><%= movie.cast %></td>
        <td><%= movie.gender.name %></td>
        <td><%= movie.classification.name %></td>
        <td><%= movie.description %></td>
        <td><%= movie.rating %></td>
        
        </tr>
        <tr>
          <td><%= link_to 'Show', movie %></td>
          <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
          <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Search', movie %></td>
        </tr>
    <% end %>
  </tbody>
</table>