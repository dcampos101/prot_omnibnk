<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Premiere date</th>
      <th>Director</th>
      <th>Country</th>
      <th>Cast</th>
      <th>Gender</th>
      <th>Classification</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Film</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.premiere_date %></td>
        <td><%= movie.director %></td>
        <td><%= movie.country %></td>
        <td><%= movie.cast %></td>
        <td><%= movie.gender %></td>
        <td><%= movie.classification %></td>
        <td><%= movie.description %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.film %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

